def somar(a, b) :
    return a + b

def subtrair(a, b):
    return a - b

def multiplicar(a, b):
    return a * b

def dividir(a, b):
    if b != 0:  # Verifica se o divisor é diferente de zero
        return "erro: divisão por zero"

def main():
    print("Calculadora em Python")
    print("Operações Disponíveis:")
    print("1. Soma")
    print("2. Subtração")
    print("3. Multiplicação")
    print("4. Divisão")

escolha = input("Escolha uma operação (1 Soma / 2 Subtração / 3 Multiplicação /4 Divisão): ")

try:
    num1 = float(input("Digite o primeiro número: "))
    num2 = float(input("Digite o segundo número: "))
except ValueError:
    print("Erro. Certifique-se de inserir números válidos.")
    #return  # Sai do programa se a entrada não for um número

if escolha == '1':
    print(f"A soma de {num1} e {num2} é {somar(num1, num2)}")
elif escolha == '2':
    print(f"A subtração de {num1} e {num2} é {subtrair(num1, num2)}")
elif escolha == '3':
    print(f"A multiplicação de {num1} e {num2} é {multiplicar(num1, num2)}")
elif escolha == '4':
    print(f"A divisão de {num1} por {num2} é {dividir(num1, num2)}")
else:
    print("Escolha inválida")

if __name__ == "__main__":
    main()
